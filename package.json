{
  "name": "perspectif-api",
  "version": "1.0.0",
  "description": "Perspectif BE",
  "main": "server.js",
  "repository": "",
  "homepage": "",
  "keywords": [
    "perspectif",
    "GPT"
  ],
  "author": "Aderemi Dare",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "test": "jest",
    "test-init": "jest --init",
    "prettier-check": "npx prettier --check .",
    "dev": "nodemon -r dotenv/config src/app.ts",
    "start": "node -r dotenv/config build/app.js",
    "deploy": "yarn build && yarn start",
    "lint": "eslint --ext .ts --ignore-path .gitignore .",
    "build": "tsc -p .",
    "prepare": "husky install",
    "migrate": "yarn sequelize-cli db:migrate",
    "migrate:u": "yarn sequelize-cli db:migrate:undo",
    "migrate:u:a": "yarn sequelize-cli db:migrate:undo:all",
    "model": "yarn sequelize-cli model:generate --name",
    "migration": "yarn sequelize-cli migration:create --name",
    "pm2": "pm2 start npm --name \"PERSPECTIF_BE\" -- start",
    "restart": "yarn && yarn build && pm2 restart PERSPECTIF_BE",
    "restart-all": "yarn build && pm2 restart all"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@hokify/agenda": "^6.3.0",
    "@types/crypto-js": "^4.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@upstash/kafka": "^1.3.5",
    "axios": "^0.21.1",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "date-fns": "^2.23.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.5.0",
    "express-validator": "^7.0.1",
    "firebase": "^10.11.1",
    "helmet": "^4.6.0",
    "jose": "^5.2.4",
    "kafkajs": "^2.2.4",
    "memory-cache": "^0.2.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.1",
    "sequelize-cursor-pagination": "^3.4.0",
    "sequelize-replace-enum-postgres": "^1.6.0",
    "swagger-ui-express": "^4.1.6",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "@flydotio/dockerfile": "^0.5.5",
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^29.5.0",
    "@types/memory-cache": "^0.2.2",
    "@types/node-cron": "^3.0.11",
    "babel-jest": "^29.5.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.24.0",
    "husky": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.7",
    "sequelize-cli": "^6.6.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.3.5"
  }
}
